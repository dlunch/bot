# Slack App credentials
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-level-token

# Codex auth options
CODEX_MODEL=gpt-5
# CODEX_AUTH_FILE defaults to ~/.codex/auth.json
# CODEX_AUTH_FILE=/absolute/path/to/auth.json

# Bot config file
# BOT_CONFIG_FILE defaults to ./config/bot.config.json
# BOT_CONFIG_FILE=/absolute/path/to/bot.config.json

# Thread context window size
MAX_THREAD_HISTORY=20
